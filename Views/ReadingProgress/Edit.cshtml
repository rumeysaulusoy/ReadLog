@model ReadLog.Models.ReadingProgress

@{
ViewData["Title"] = "Update Your Reading Progress";
}

<h5>@ViewData["Title"]</h5>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="BookId" />

    <div class="form-group mb-4">
        <label asp-for="PagesRead" class="control-label">Pages Read</label>
        <input asp-for="PagesRead" class="form-control" />
        <span asp-validation-for="PagesRead" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="StartDate" class="control-label">Start Date</label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="EndDate" class="control-label">End Date</label>
        <input asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn" style="background-color: rosybrown; color: white;" />
        <a asp-action="Details" asp-controller="Books" asp-route-id="@Model.BookId" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
